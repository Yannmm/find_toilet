/**index.wxss**/
page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.map {
  width: 100%;
  height: calc(100% - 40vh);
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
  transition: height 0.3s ease;
}

.map-fullscreen {
  height: 100%;
}

.toilet-list {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40vh;
  background: #ffffff;
  z-index: 2;
  transition: height 0.3s ease, transform 0.3s ease;
}

.list-collapsed {
  height: 60rpx;
  background: rgba(255, 255, 255, 0.9);
}

.list-header {
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1px solid #eee;
}

.expand-hint {
  font-size: 24rpx;
  color: #666;
}

.toilet-item {
  background: #ffffff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.toilet-item-selected {
  background: #e6f3ff;
  border: 2rpx solid #1aad19;
  transform: scale(1.02);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.15);
}

