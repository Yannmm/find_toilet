/**index.wxss**/
page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.map-section {
  height: 50vh;
  width: 100%;
}

.map {
  width: 100%;
  height: 100%;
}

.toilet-list {
  height: 50vh;
  overflow-y: auto;
  background: #f5f5f5;
}

.toilet-item {
  background: #ffffff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
}

.toilet-name {
  font-size: 32rpx;
  font-weight: bold;
}

.toilet-address {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.toilet-distance {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
