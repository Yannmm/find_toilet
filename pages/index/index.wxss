/**index.wxss**/
page {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.map {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.toilet-list {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 40vh;
  background: rgba(255, 255, 255, 0.95);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  z-index: 2;
}

.toilet-item {
  background: #ffffff;
  padding: 20rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.toilet-name {
  font-size: 32rpx;
  font-weight: bold;
}

.toilet-address {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.toilet-distance {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}